<%- include partials/header.ejs %> 

 <%- include partials/main_nav.ejs %> 
 <div class="container">
  <div class="row text-secondary text-center p-2">
      <h2><%= title %></h2>
  </div>
  <!--Grid Row-->    
  <div class="row">
      <!--Grid Column Content-->
      <div class="col-md-5 text-center">
          <h4 class="h1-responsive font-weight-bold text-center text-secondary my-2">Contact Information</h4>
          <!--List-->
          <ul class="list-unstyled mb-0">
              </li>
              <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                  <p><a href="mailto:msaad10@my.centennialcollege.ca" class="text-decoration-none">msaad10@my.centennialcollege.ca</a> </p>
              </li>
              
          </ul>
          <!--List-->
      </div>
      <!--Grid Column Content-->
      <!--Grid column Content-->
      <div class="col-md-6 pr-5 pl-5 pb-5">
          <p class="w-responsive mx-auto text-secondary p-4">You can reach me out directly
              below and leave your contact details. 
              I am looking forward to hearing from you!
          </p>
          <!--Form-->
          <form id="contact-form" name="contact-form" >
              <div class="md-form p-2">
                  <input type="text" id="name" name="name" placeholder="Your name" class="form-control">
              </div>
              <div class="md-form p-2">
                  <input type="text" id="email" name="email" placeholder="Your email" class="form-control">
              </div>
              <div class="md-form p-2">
                  <input type="text" id="phone" name="phone" placeholder="Your phone number" class="form-control">
              </div>
              <div class="md-form p-2">
                  <textarea type="text" id="message" name="message" rows="3" placeholder="Your message" class="form-control md-textarea"></textarea>
              </div>
          </form>
          <!--Form-->
          <div class="text-center text-md-left p-2">
              <a class="btn btn-secondary" id="send">Send</a>
          </div>
          <div class="status"></div>
      </div>
      <!--Grid column Content-->
  </div>
  <!--Grid Row-->
</div>
